@page "/technical/Products"
@model kamjaService.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Index";
}
@{
    Layout = "/Pages/Shared/_FLayout.cshtml";
}
<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-hover table-striped table-dark col-10 col-sm-10 col-lg-10">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].PartRef)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Code)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PartRef)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ProductId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ProductId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ProductId">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
