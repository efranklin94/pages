@page
@model kamjaService.Pages.Admin.ColorViewTable.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>ویرایش</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ColorsViewTable.color_Id" />
            <div class="form-group">
                <h6>گروه رنگ</h6>
                <input asp-for="ColorsViewTable.color_category" class="form-control" />
                <span asp-validation-for="ColorsViewTable.color_category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h6>رنگ</h6>
                <input asp-for="ColorsViewTable.color" class="form-control" />
                <span asp-validation-for="ColorsViewTable.color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ColorsViewTable.flag" class="control-label"></label>
                <select class="custom-select" asp-for="ColorsViewTable.flag">
                    <option selected>@Model.ColorsViewTable.flag</option>
                    @if(@Model.ColorsViewTable.flag == 0) { 
                        <option value="1">1</option>
                    }
                    else {
                        <option value="0">0</option>
                    }
                </select>
                <span asp-validation-for="ColorsViewTable.flag" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index"><h5>بازگشت به لیست</h5></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
